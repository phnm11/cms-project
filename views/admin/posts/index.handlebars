<h1>All Posts</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>File</th>
            <th>Title</th>
            <th>Status</th> 
            <th>Category</th> 
            <th>Allow Comments</th>
            <th>Detail</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{_id}}</td>
            <td><img height="50" src="/uploads/{{file}}" alt=""></td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{category.name}}</td>
            <td>{{allowComments}}</td>
            <td><a href="/post/{{slug}}">View</a></td>
            <td>{{generateDate date 'MMMM DD, YYYY'}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>