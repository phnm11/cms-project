<h1>Comments</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Comment</th>
      <th scope="col">Owner</th>
      <th scope="col">Status</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each comments}}
    <tr>
      <td>{{_id}}</td>
      <td>{{body}}</td>
      <td>{{user.firstName}}</td>
      <td><input type="checkbox" {{#if approveComment}} checked {{/if}} name="approveComment"  data-id="{{_id}}"></td>
      <td>{{generateDate date "MMMM DD, YYYY"}}</td>
      <td>
        <form action="/admin/comments/{{_id}}?_method=DELETE" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>